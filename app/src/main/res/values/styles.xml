<resources>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="AppTheme.NoActionBar" parent="BaseTheme.NoActionBar">
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="BaseTheme.NoActionBar.Fullscreen">
    </style>

    <style name="AppTheme.NoActionBar.Tutorial">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="BaseTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TutorialFont" parent="TextAppearance.AppCompat.Display1">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

</resources>
